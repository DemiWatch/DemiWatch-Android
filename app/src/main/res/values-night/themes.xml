<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DemiWatch" parent="Theme.MaterialComponents.Light">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/blue</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue</item>
        <item name="colorSecondaryVariant">@color/blue</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/poppinsregular</item>
        <item name="fontFamily">@font/poppinsregular</item>
        <item name="android:buttonStyle">@style/NotAllCapsButtonStyle</item>
    </style>

    <!--    TEXT STYLE      -->
    <style name="textStyleMediumCustom">
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/poppinsmedium</item>
    </style>

    <style name="textStyleSemiBoldCustom">
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/poppinssemibold</item>
    </style>

    <style name="textStyleButtonWhite">
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/poppinssemibold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="textStyleButtonWhiteSmall">
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/poppinssemibold</item>
        <item name="android:textSize">14sp</item>
    </style>
    <!--    TEXT STYLE-END      -->

    <style name="CustomTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/poppinsmedium</item>
    </style>

    <style name="ImageView.Round" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="BottomNavigationLabelStyle" parent="@style/TextAppearance.AppCompat">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="NotAllCapsButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:textAllCaps">false</item>
    </style>
</resources>